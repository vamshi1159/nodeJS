extends layouts/main-layout.pug 

block styles 
    link(rel="stylesheet", href="/css/main.css")
    
block content 
    main 
        if prods.length >0
            .grid 
                each product in prods
                    article.card.product-item 
                        header.card__header 
                            h1.product__title #{product.title}
                        .card__image 
                            img(src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQ_4ETkLavf5DgTtpLjKbVkiQT19emMpJPNx5al15DV&s",alt="")
                        .card__content 
                            h2.product__price $19.99
                            p.product__description A versy insteresting book about so many even more
                        .card__actions 
                            button.btn Add to Cart
        else 
            h1 No Products